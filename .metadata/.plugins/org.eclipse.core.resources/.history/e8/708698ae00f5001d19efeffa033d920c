package modue1DiscussionPost;

import java.util.Scanner;

public class Main {

    public static void main(String[] args){
    
      int sum = 0, userNumber1, userNumber2;

      Scanner inputNum = new Scanner(System.in);

      System.out.println("Please enter the First Number: ");
      userNumber1 = inputNum.nextInt();
 
      System.out.println("Please enter the Second Number: ");

      userNumber2 = inputNum.nextInt();
 
      sum = userNumber1 + userNumber2;
 
      System.out.println("Please note that the sum of the two numbers you entered = " + sum);
    }
}